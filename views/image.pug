extends layout

block scripts
  script.
    $(function () {
      $('[data-toggle="tooltip"]').tooltip({ tigger: 'manual' })

    })
    var copyBtn = new Clipboard('.btn-cp');
    copyBtn.on('success', function () {
      $('[data-toggle="tooltip"]').tooltip('show')
    })

block content
  ol.breadcrumb
    li
      a(href="/") Home
    li
      a(href="/") Images
    li.active
      a(href="#")= image
  center
    h2= image+" "
      small :tags
  hr
  .col-sm-6
    .panel.panel-default
      .panel-heading Tags
      .panel-body
        .list-group
          each tag in tags
            .list-group-item= tag

  .col-sm-6
    .panel.panel-default
      .panel-heading
        span Docker Pull Command
        a.glyphicon.glyphicon-copy.btn-cp(data-toggle="tooltip" data-placement="top" title="copied!" style='float:right;' href="#" data-clipboard-target="#pull-cmd")
      .panel-body
        pre#pull-cmd= "docker pull registry.jorgeadolfo.com/"+image+":"+tags[tags.length-1]

    .panel.panel-default
      .panel-heading
        span Repo
        a.glyphicon.glyphicon-copy.btn-cp(data-toggle="tooltip" data-placement="top" title="copied!" style='float:right;' href="#" data-clipboard-target="#pull-cmd")
      .panel-body
        pre#pull-cmd= "docker pull registry.jorgeadolfo.com/"+image+":"+tags[tags.length-1]
